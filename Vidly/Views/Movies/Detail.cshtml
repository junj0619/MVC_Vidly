@model Vidly.Models.Movie
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.Value.ToString("MMMM/d, yyyy")</li>
    <li>Date Added: @Model.CreatedDate.Value.ToString("MMMM/d, yyyy")</li>
    <li>Numbr in Stock: @Model.NumberInStock</li>
</ul>

